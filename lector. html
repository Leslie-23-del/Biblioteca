<script>
let pdf = localStorage.getItem("pdfSeleccionado");

if(pdf){
  document.getElementById("pdfViewer").src = pdf;
}else{
  document.body.innerHTML = "<h2 style='color:white;text-align:center;margin-top:50px;'>No hay PDF seleccionado</h2>";
}
</script>

