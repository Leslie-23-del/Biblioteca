<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8">
<title>Lector EPUB</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<script src="https://unpkg.com/epubjs/dist/epub.min.js"></script>

<style>
body{
  margin:0;
  background:#1a120b;
  color:#f5f1ea;
  font-family:serif;
  text-align:center;
}

header{
  background:#3a2616;
  padding:1rem;
}

button{
  background:#c9a35d;
  border:none;
  padding:.6rem 1.2rem;
  cursor:pointer;
  margin-top:1rem;
}

#lector{
  margin-top:2rem;
  height:80vh;
}
</style>

<script>
let libro;
let vista;

function cargarEpub(input){
  const archivo = input.files[0];
  if(!archivo) return;

  libro = ePub(archivo);
  vista = libro.renderTo("lector", {
    width: "100%",
    height: "100%"
  });
  vista.display();
}
</script>
</head>

<body>

<header>
<h2>Lector de Libros</h2>
<input type="file" accept=".epub" onchange="cargarEpub(this)">
</header>

<div id="lector"></div>

</body>
</html>
